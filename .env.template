# ==================================================
# AI ASSISTANT ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# --------------------------------------------------
# API KEYS
# --------------------------------------------------
# OpenWeather API Key (for weather features)
# Get yours at: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# OpenRouter API Key (for GPT-5 Pro integration)
# Get yours at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# --------------------------------------------------
# GOOGLE CREDENTIALS
# --------------------------------------------------
# Path to your Google OAuth credentials file
GOOGLE_CREDENTIALS=credentials.json

# --------------------------------------------------
# TTS (Text-to-Speech) SETTINGS
# --------------------------------------------------
# Voice to use for TTS
# Options: en-US-MichelleNeural, en-GB-LibbyNeural, etc.
TTS_VOICE=en-US-MichelleNeural

# --------------------------------------------------
# STT (Speech-to-Text) SETTINGS
# --------------------------------------------------
# Language code for speech recognition
STT_LANGUAGE=en-US

# --------------------------------------------------
# ASSISTANT SETTINGS
# --------------------------------------------------
# Name of your assistant
ASSISTANT_NAME=Ashley

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# --------------------------------------------------
# FEATURE FLAGS
# --------------------------------------------------
# Enable/disable specific features (true/false)
USE_NLP=false
USE_GPT=false
ENABLE_ALARM_WATCHER=true
AUTO_CLEANUP_TTS=true